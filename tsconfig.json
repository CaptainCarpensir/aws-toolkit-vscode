{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "sourceMap": true,
        "moduleResolution": "node",
        "rootDir": ".",
        "resolveJsonModule": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitOverride": true,
        "lib": ["dom", "es2021"],
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "noEmitOnError": true,
        "skipLibCheck": true
    },
    "files": [],
    "references": [
        {
            "path": "./packages/toolkit"
        }
    ]
}
